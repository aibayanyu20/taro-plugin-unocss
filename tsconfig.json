{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2016",
        "lib": ["DOM", "ESNext"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
    },
    "exclude": ["dist", "node_modules"]
}
